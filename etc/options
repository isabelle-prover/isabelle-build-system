(* :mode=isabelle-options: *)

section "Build System"

option build_system_delay : real = 1.0
  -- "delay build system loop"

option build_system_poll_delay : real = 60.0
  -- "delay build system poll loop"

option build_system_dir : string = "/srv/build"
  -- "directory for submissions on build server"

option build_system_identifier : string = "build_system"
  -- "isabelle identifier for build system processes"
  
option build_system_ci_jobs : string = "benchmark"
  -- "ci jobs that should be executed on repository changes"

option build_system_address : string = "https://build.proof.cit.tum.de"
  -- "web address for build server"

section "Build System SSH"

option build_system_ssh_host : string = "build.proof.cit.tum.de" for connection
option build_system_ssh_user : string = "" for connection
option build_system_ssh_port : int = 0 for connection

section "Build System Database"

option build_system_database_user : string = "isabelle" for connection
option build_system_database_password : string = "" for connection
option build_system_database_name : string = "isabelle_build_system" for connection
option build_system_database_host : string = "localhost" for connection
option build_system_database_port : int = 5432 for connection
option build_system_database_ssh_host : string = "" for connection
option build_system_database_ssh_user : string = "" for connection
option build_system_database_ssh_port : int = 0 for connection